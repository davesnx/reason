(library
 (name Test)
 (public_name reason-dev.test)
 (libraries reason rely.lib)
 (flags -linkall -g)
 (modules (:standard \ Run))
)

(executable
 (name Run)
 (public_name Run.exe)
 (package reason-dev)
 (libraries reason-dev.test)
 (modules Run)
)

(alias
 (name runtest)
 (deps
  (:exe Run.exe)
  (glob_files _snapshots/*)
  (source_tree fixtures)
 )
 (action (run %{exe}))
