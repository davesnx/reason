(library
 (name Test)
 (public_name reason-dev.test)
 (libraries reason rely.lib)
 (flags -linkall -g)
 (ocamlopt_flags -linkall -g)
 (modules (:standard \ TestRun))
)

(executable
 (name TestRun)
 (public_name TestRun.exe)
 (package reason-dev)
 (libraries reason-dev.test)
 (modules TestRun)
)

(alias
 (name runtest)
 (deps (:exe TestRun.exe) (glob_files test/_snapshots/*))
 (action (run %{exe}))
)
